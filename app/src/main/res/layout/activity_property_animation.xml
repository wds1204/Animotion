<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wds.animotion.PropertyAnimationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/iv_point1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/black">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/shape_point"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_point2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"

                android:src="@drawable/shape_point"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_point3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"

                android:src="@drawable/shape_point"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_point4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_red_light">

            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"

                android:src="@drawable/shape_point"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_point5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/shape_point"/>
        </LinearLayout>

        <TextView
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/iv_point1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:text="渐变"
            android:textSize="18sp"/>

    </RelativeLayout>



</RelativeLayout>
